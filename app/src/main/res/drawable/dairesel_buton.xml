<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >
    <corners
        android:radius="150dp"
        />
    <gradient
        android:angle="45"
        android:centerX="35%"
        android:centerColor="#47A85D"
        android:startColor="#20E87E"
        android:endColor="#FFDEDE"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="250dp"
        android:height="250dp"
        />
</shape>